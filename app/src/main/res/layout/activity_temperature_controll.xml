<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_marginTop="100dp"
        android:id="@+id/temperature_control_textView_name"/>
    <com.example.root.temperaturecontroll.Activity.MyCustomTemperaturePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/temperature_control_view"/>
    <com.example.root.temperaturecontroll.Activity.MyCustomHourPicker
        android:layout_width="50dp"
        android:layout_gravity="end"
        android:layout_height="match_parent"
        android:id="@+id/temperature_control_hour"/>


</FrameLayout>