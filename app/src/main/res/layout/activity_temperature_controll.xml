<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay"
    android:orientation="vertical">
    <TextView
        android:id="@+id/temperature_control_textView_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <com.example.root.temperaturecontroll.CustomUIElements.MyCustomTemperaturePicker
        android:id="@+id/temperature_control_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="30dp" />

    <com.example.root.temperaturecontroll.CustomUIElements.MyCustomHourPicker
        android:id="@+id/temperature_control_hour"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="end" />


</FrameLayout>